<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping class="com.ab.eduplatform.entity.User"/>
        <mapping class="com.ab.eduplatform.entity.Course"/>
        <mapping class="com.ab.eduplatform.entity.Lesson"/>
        <mapping class="com.ab.eduplatform.entity.Progress"/>
        <mapping class="com.ab.eduplatform.entity.Certificate"/>
        <mapping class="com.ab.eduplatform.entity.LessonCompletion"/>
        <mapping class="com.ab.eduplatform.entity.Profile"/>
    </session-factory>
</hibernate-configuration>
